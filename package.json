{
  "name": "create2-contracts",
  "version": "0.1.0",
  "author": "0xSlaweekq",
  "directories": {
    "test": "./test",
    "build": "./build",
    "contracts": "./contracts",
    "deploy": "./deploy",
    "flow": "./flow",
    "tasks": "./tasks",
    "utils": "./utils"
  },
  "scripts": {
    "auto-test": "slither .",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat clean && npx hardhat compile && npx tronbox compile --all",
    "coverage": "npm run compile && npx hardhat coverage --testfiles 'test/*.test.ts'",
    "format": "npx prettier -w \"./**/*{.ts,.js,.json,.md,.sol}\"",
    "gen-abi": "npm run compile && npx hardhat --network localhost_eth gen-abi && npm run format",
    "lint": "npx eslint --fix \"./**/*{.ts,.js}\"",
    "lint:sol": "npx solhint contracts/**/**/*.sol",
    "ln": "docker compose -f ./docker-compose.yml up -d",
    "ln-reboot": "docker compose -f ./docker-compose.yml down -v && docker compose -f ./docker-compose.yml rm -v && npm run ln",
    "ln-stop": "docker compose -f ./docker-compose.yml down -v && docker compose -f ./docker-compose.yml rm -v",
    "prepare": "husky install",
    "pretty-quick": "pretty-quick --staged",
    "release": "standard-version --commit-all",
    "s:contract-summary": "slither . --print contract-summary",
    "s:function-summar": "slither . --print function-summar",
    "s:human-summary": "slither . --print human-summary",
    "s:inheritance-graph": "slither . --print inheritance-graph --include-interfaces && dot -Tpng inheritance-graph.dot -o docs/inheritance-graph.png && rm -f inheritance-graph.dot",
    "summary": "slither . --checklist > ./docs/ContractsSummary.md",
    "test": "npx hardhat test",
    "test:bsc": "npx hardhat --network localhost_bsc test",
    "test:bscTestnet": "npx hardhat --network bscTestnet2 test test/deploy-bscTestnet.test.ts",
    "test:eth": "npx hardhat --network localhost_eth test",
    "test:tron": "npx hardhat --network tronTest test"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.sol": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "axios": "^1.7.9",
    "npm": "^11.0.0",
    "web3": "^1.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@nomicfoundation/hardhat-chai-matchers": "2.0.8",
    "@nomicfoundation/hardhat-ethers": "3.0.8",
    "@nomicfoundation/hardhat-ignition": "0.15.9",
    "@nomicfoundation/hardhat-ignition-ethers": "0.15.9",
    "@nomicfoundation/hardhat-network-helpers": "1.0.12",
    "@nomicfoundation/hardhat-toolbox": "5.0.0",
    "@nomicfoundation/hardhat-verify": "2.0.12",
    "@openzeppelin/contracts": "^4.9.6",
    "@openzeppelin/contracts-upgradeable": "^4.9.6",
    "@openzeppelin/hardhat-upgrades": "^3.8.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "9.1.0",
    "@types/bip39": "^2.4.2",
    "@types/chai": "^4.3.20",
    "@types/hdkey": "^2.1.0",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "bip39": "^3.1.0",
    "commitlint": "^19.6.1",
    "dotenv": "16.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-address": "^0.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.0.0",
    "hardhat": "2.22.17",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "0.14.0",
    "hardhat-gas-reporter": "^1.0.8",
    "hdkey": "^2.1.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "prettier-plugin-packagejson": "^2.5.6",
    "prettier-plugin-solidity": "^1.4.2",
    "pretty-quick": "^4.0.0",
    "solhint": "^5.0.3",
    "solhint-community": "^4.0.0",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.14",
    "standard-version": "^9.5.0",
    "testcontainers": "^10.13.1",
    "tronbox": "^4.0.2",
    "tronweb": "^6.0.0",
    "ts-generator": "0.1.1",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tslib": "2.8.0",
    "typechain": "8.3.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^7.8.0"
  }
}
